<div class="fields">

<div class="control-group">
  <%= f.label :title, 'Section Title', class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :title, class: 'input-xlarge' %>
  </div>
</div>

<% if !f.object.new_record? %>
	<%= f.hidden_field :_destroy %>
	<%= link_to_function 'Delete', "remove_fields(this)" %>
<% else %>
	<%= link_to_function 'Delete', "remove_new(this)" %>
<% end %>

<div class="control-group">
	<%= f.text_area :body, class: 'tinymce' %>
</div>

</div>
